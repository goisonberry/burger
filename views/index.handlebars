<h1 id="burgers">Burgers</h1>

<h2>Devour a Burger</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <p>{{burger_name}}</p>
    <button id="devour" data-id ="{{id}}" data-dBurger="true">Devour it!!</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <p>{{burger_name}}</p>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerName">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button id="add" type="submit">Add Burger</button>
</form>